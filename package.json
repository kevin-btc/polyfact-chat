{
  "version": "0.1.28",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "build"
  ],
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "template": "./build/template"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "tsdx lint src",
    "prepare": "yarn lint --fix ; tsdx build",
    "go": "yarn prepare && npm publish",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "bin:build": "esbuild bin/index.ts --bundle --outfile=build/template.tmp --platform=node --external:react && echo '#!/usr/bin/env node\n' | cat - build/template.tmp > build/template && rm build/template.tmp"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@polyfact/chat",
  "author": "kgricour",
  "module": "dist/chat.esm.js",
  "size-limit": [
    {
      "path": "dist/chat.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/chat.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^9.0.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.2",
    "autoprefixer": "^10.4.15",
    "eslint": "8.47.0",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^8.0.3",
    "postcss": "^8.4.28",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^9.0.0",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.4",
    "commander": "^11.0.0",
    "phosphor-react": "^1.4.1",
    "polyfact": "^0.1.79",
    "react-markdown": "^8.0.7",
    "styled-components": "^6.0.7",
    "tsdx": "^0.14.1",
    "uuid": "^9.0.0"
  }
}
